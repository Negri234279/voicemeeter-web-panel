---
import '../styles/global.css'

interface Props {
    title?: string
}

const { title } = Astro.props
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>

    <body class="bg-slate-900 text-white min-h-screen flex flex-col">
        <header class="p-4">
            <nav>
                <a href="/" class="logo"></a>
                <ul>
                    <li><a href="dashboard">Dashboard</a></li>
                    <li><a href="buttons">Buttons</a></li>
                </ul>
            </nav>
        </header>

        {title && <h1 class="text-2xl font-bold text-center">{title}</h1>}

        <main class="p-4">
            <slot />
        </main>

        <footer class="p-4 text-center border-t border-slate-700 text-sm text-slate-400 mt-auto">
            Voicemeeter Dashboard Â© {new Date().getFullYear()}
        </footer>
    </body>
</html>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: radial-gradient(circle at 30% 20%, #1c1c1c, #000);
    }

    nav {
        background-color: #1a1a1a;
        color: #fff;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.75rem 2rem;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.4);
    }

    nav .logo {
        font-size: 1.4rem;
        font-weight: bold;
        color: #00ffff;
        text-decoration: none;
    }

    a.logo::after {
        content: 'ðŸŽ§ VM';
    }

    @media (min-width: 500px) {
        a.logo::after {
            content: 'ðŸŽ§ VoiceMeeter';
        }
    }

    nav ul {
        list-style: none;
        display: flex;
        gap: 1.5rem;
        margin: 0;
        padding: 0;
    }

    nav ul li a {
        color: #fff;
        text-decoration: none;
        transition: 0.2s;
    }

    nav ul li a:hover {
        color: #00ffff;
    }
</style>
